<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:scrollbars="none" xmlns:app="http://schemas.android.com/tools">

<LinearLayout android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:context="com.example.medicalrep.EditPharmacistDetail" >

        <EditText
            android:id="@+id/et_pharmacyName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_pharmacyName"
            android:layout_alignBottom="@+id/tv_pharmacyName"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_pharmacyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_userName"
            android:layout_alignParentTop="true"
            android:layout_marginTop="43dp"
            android:text="@string/pharmacy_name" />

        <EditText
            android:id="@+id/et_telephone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_telephone"
            android:layout_alignBottom="@+id/tv_telephone"
            android:layout_alignRight="@+id/et_address"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_email"
            android:layout_alignBottom="@+id/tv_email"
            android:layout_alignRight="@+id/et_telephone"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_address"
            android:layout_alignBottom="@+id/tv_address"
            android:layout_alignLeft="@+id/et_username"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_userName"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="25dp"
            android:text="@string/address" />

        <TextView
            android:id="@+id/tv_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_address"
            android:layout_below="@+id/et_address"
            android:layout_marginTop="30dp"
            android:text="@string/telephone" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_telephone"
            android:layout_below="@+id/et_telephone"
            android:layout_marginTop="27dp"
            android:text="@string/e_mail" />

        <TextView
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_pharmacyName"
            android:layout_below="@+id/et_pharmacyName"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:text="Username" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_address"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="23dp"
            android:text="@string/userName" />

        <Button
            android:id="@+id/bt_save"
            style="@style/btnStyleBeige"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_email"
            android:layout_marginTop="29dp"
            android:onClick="updatePharmacist"
            android:text="@string/save" />

        <Button
            android:id="@+id/bt_cancel"
            style="@style/btnStyleBeige"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_save"
            android:layout_alignBottom="@+id/bt_save"
            android:layout_toLeftOf="@+id/bt_save"
            android:onClick="cancel"
            android:text="@string/cancel" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>
